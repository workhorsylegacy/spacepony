<h1>Listing tomboy notes for <%=h @user.name %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th>Tag</th>
  </tr>

<% for tomboy_note in @tomboy_notes %>
  <tr>
    <td><%=h tomboy_note.name %></td>
    <td><%=h Base64.decode64(tomboy_note.body)[0..19] + ' ...' %></td>
    <td><%=h tomboy_note.tag %></td>
    <td><%= link_to 'Show', :action => :show, :id => tomboy_note.id, :user_id => @user.id %></td>
    <td><%= link_to 'Edit', :action => :edit, :id => tomboy_note.id, :user_id => @user.id %></td>
    <td><%= link_to 'Destroy', {:action => :destroy, :id => tomboy_note.id, :user_id => @user.id}, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

