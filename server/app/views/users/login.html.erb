<h1>Login</h1>

<% form_tag :controller => 'users', :action => 'login' do %>
  <p>
    <%= label_tag 'name' %><br />
    <%= text_field_tag :user_name, params[:user_name] %>
  </p>
  <p>
    <%= label_tag 'password' %><br />
    <%= password_field_tag :password, params[:password] %>
  </p>
  <p>
    <%= submit_tag "Login" %>
  </p>
<% end %>
